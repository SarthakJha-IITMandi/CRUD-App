                                <!-- <div class="dropdown-divider"></div> -->
                                <a class="dropdown-item" href="/articles/delete">Delete</a>
                            </div>
                        </li>
                        <!-- <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li> -->
            </ul>
            <% if(user) { %>
                <ul class="navbar-nav my-1 my-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="/users/logout">Logout</a>
                    </li>
                    <%} else {%>
                        <ul class="navbar-nav my-2 my-lg-0">
                            <li class="nav-item active">
                                <a class="nav-link" href="/users/register">Register</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/users/login">Login</a>
                            </li>
                        </ul>
                        <%}%>
        </div>
    </nav>
    <%- messages('message', locals) %>
        <h1>
            <%=article.title%>
        </h1>
        <p>
            <%=article.body%>
        </p>
        <% if(user) {%>
            <% if(user.id==article.author) {%>
                <% const editlink="/articles/edit/" + article._id;%>
                    <% const dellink="/articles/" + article._id + "?_method=DELETE" ;%>
                        <a class="btn btn-outline-dark" href=<%=editlink %>>Edit</a>
                        <a class="btn btn-danger delete-article" href="#" data-id=<%=article._id%>>Delete</a>
                        <% } %>
                            <% } %>
